                <nav class="header__menu">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li  class="active"><a href="/shop">Shop</a></li>
                      <% if (user) { %>
                        <li><a href="/cart">Cart</a></li>
                      <% } else { %>
